{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mezamearts.com/schemas/",
  "title": "Order",
  "type": "object",
  "required": [
    "id",
    "buyerId",
    "items",
    "total",
    "currency",
    "status",
    "createdAt",
    "paymentId",
    "artistId"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "buyerId": {
      "type": "string"
    },
    "artistId": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "artworkId",
          "title",
          "unitPrice",
          "qty"
        ],
        "properties": {
          "artworkId": {
            "type": "string"
          },
          "title": {
            "type": "string"
          },
          "unitPrice": {
            "type": "number",
            "minimum": 0
          },
          "qty": {
            "type": "integer",
            "minimum": 1
          }
        }
      }
    },
    "total": {
      "type": "number",
      "minimum": 0
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$"
    },
    "status": {
      "type": "string",
      "enum": [
        "pending",
        "paid",
        "fulfilled",
        "refunded",
        "cancelled"
      ]
    },
    "paymentId": {
      "type": "string"
    },
    "shipping": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "address1": {
          "type": "string"
        },
        "city": {
          "type": "string"
        },
        "country": {
          "type": "string"
        },
        "postalCode": {
          "type": "string"
        }
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}