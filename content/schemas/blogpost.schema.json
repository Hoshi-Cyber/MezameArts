{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mezamearts.com/schemas/",
  "title": "BlogPost",
  "type": "object",
  "required": [
    "id",
    "title",
    "slug",
    "excerpt",
    "content",
    "author",
    "category",
    "tags",
    "publishedAt",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "excerpt": {
      "type": "string",
      "maxLength": 300
    },
    "content": {
      "type": "string"
    },
    "author": {
      "type": "string"
    },
    "category": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "coverImage": {
      "type": "string",
      "format": "uri"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "published"
      ]
    },
    "publishedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}