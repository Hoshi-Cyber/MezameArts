{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mezamearts.com/schemas/",
  "title": "Artwork",
  "type": "object",
  "required": [
    "id",
    "title",
    "slug",
    "price",
    "currency",
    "images",
    "artistId",
    "category",
    "availability",
    "createdAt"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]{8,}$"
    },
    "title": {
      "type": "string",
      "minLength": 2,
      "maxLength": 140
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "description": {
      "type": "string",
      "maxLength": 5000
    },
    "category": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "price": {
      "type": "number",
      "minimum": 0
    },
    "currency": {
      "type": "string",
      "pattern": "^[A-Z]{3}$"
    },
    "dimensions": {
      "type": "string"
    },
    "medium": {
      "type": "string"
    },
    "images": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "format": "uri"
      }
    },
    "availability": {
      "type": "string",
      "enum": [
        "in_stock",
        "sold",
        "reserved",
        "print_to_order"
      ]
    },
    "artistId": {
      "type": "string"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}