{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mezamearts.com/schemas/",
  "title": "Category",
  "type": "object",
  "required": [
    "id",
    "name",
    "slug"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "slug": {
      "type": "string",
      "pattern": "^[a-z0-9-]+$"
    },
    "description": {
      "type": "string"
    }
  },
  "additionalProperties": false
}